//=============================================================================
// Global variables
//=============================================================================

//=============================================================================
// Vertex shader output structure
//=============================================================================
struct VS_OUTPUT
{
	float2 Texcoord0 : TEXCOORD0;
};

//=============================================================================
// Pixel shader input structure
//=============================================================================
struct PS_OUTPUT
{
	float4 Color : COLOR;
};

sampler postbuffer;

//=============================================================================
// Pixel Shader
//=============================================================================
PS_OUTPUT PS( VS_OUTPUT In )
{
	PS_OUTPUT Out;

	float4 vImageColor = tex2D(postbuffer, In.Texcoord0);
	
	float fStep = step(0.502f, vImageColor.a);
	vImageColor.a *=  3.0f - vImageColor.a; 
	vImageColor.rgb *= fStep;
	
	Out.Color = vImageColor;
	

	return Out;
}

