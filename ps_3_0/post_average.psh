//=============================================================================
// Global variables
//=============================================================================
float4	vTexelSize;

//=============================================================================
// Vertex shader output structure
//=============================================================================
struct VS_OUTPUT
{
	float2 Texcoord0 : TEXCOORD0;
};

//=============================================================================
// Pixel shader input structure
//=============================================================================
struct PS_OUTPUT
{
	float4 Color : COLOR;
};

sampler rttexturecopy;

//=============================================================================
// Pixel Shader
//=============================================================================
PS_OUTPUT PS( VS_OUTPUT In )
{
	PS_OUTPUT Out;
	float fX;
	float fY;
	float fDiv = 1.0f;
	for (fX = 0.0f; fX <= 0.1f; fX += 0.001f)
	{
		for (fY = 0.0f; fY <= 0.1f; fY += 0.001f)
		{
			Out.Color += tex2D(rttexturecopy, In.Texcoord0.xy + float2(fX, fY));
			fDiv += 1.0f;
		}
	}
	
	Out.Color /= fDiv;

	return Out;
}

