// Default K2 GUI pixel shader
//=============================================================================

//=============================================================================
// Global variables
//=============================================================================
float4 vChannels;

//=============================================================================
// Vertex shader output structure
//=============================================================================
struct VS_OUTPUT
{
	float4 Color0 : COLOR0;
	float2 Texcoord0 : TEXCOORD0;
	float4 Channel : COLOR1;
};

//=============================================================================
// Pixel shader input structure
//=============================================================================
struct PS_OUTPUT
{
	float4 Color : COLOR;
};

sampler image;

//=============================================================================
// Pixel Shader
//=============================================================================
PS_OUTPUT PS( VS_OUTPUT In )
{
	PS_OUTPUT Out;
	
	float4 vColor = tex2D(image, In.Texcoord0);
	vColor = max(0.7f, vColor);
	vColor = max(vColor * vColor, 0.6);

	float4 vFinal = lerp(1.0f, vColor.rgba, In.Channel);

	Out.Color = vFinal * In.Color0;

	return Out;
}
