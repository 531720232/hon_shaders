//=============================================================================
// Vertex shader output structure
//=============================================================================
struct VS_OUTPUT
{
	float2 Texcoord0 : TEXCOORD0;
	float4 Texcoord1 : TEXCOORD1;
};

//=============================================================================
// Pixel shader input structure
//=============================================================================
struct PS_OUTPUT
{
	float4 Color : COLOR;
};

sampler postbuffer;

//=============================================================================
// Pixel Shader
//=============================================================================
PS_OUTPUT PS( VS_OUTPUT In )
{
	PS_OUTPUT Out;
	
	Out.Color.rgba = tex2D(postbuffer, In.Texcoord0.xy).rgba;
	Out.Color.rgb += tex2D(postbuffer, In.Texcoord1.xy).rgb;
	Out.Color.rgb += tex2D(postbuffer, In.Texcoord1.zw).rgb	;
	Out.Color.rgb /= 2.75f;
		
	return Out;
}

