#include "../common/common.h"

//=============================================================================
// Vertex shader output structure
//=============================================================================
struct VS_OUTPUT
{
};

//=============================================================================
// Pixel shader input structure
//=============================================================================
struct PS_OUTPUT
{
	float4 Color : COLOR;
};

//=============================================================================
// Pixel Shader
//=============================================================================
PS_OUTPUT PS( VS_OUTPUT In )
{
	PS_OUTPUT Out;
	
	Out.Color.rgb = 0.0f;
	Out.Color.a = 1.0f;

	return Out;
}
